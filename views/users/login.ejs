<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="POST"  class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type="username" 
                    name="username" 
                    id="username"
                    class="form-control" 
                    required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input type="password" 
                    name="password"
                    id="password"
                    class="form-control" 
                    required>
                </div>
                <button class="btn btn-success btn-sm mb-2">login</button>
            </form>
        </div>
    </div>