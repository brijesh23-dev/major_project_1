<% layout('layouts/boilerplate') %>

    <div class="row mt-3">
        <div class="col-8 offset-3 ">
            <h3>
                <%=listing.title %>
            </h3>
        </div>
        <div class="listing-card col-6 offset-3 show-card">
            <img src="<%=listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <%=listing.description %><br>
                    &#8377;<%=listing.price.toLocaleString("en-NI") %><br>
                        <%=listing.location %><br>
                            <%=listing.country %>
                                </p>
            </div>
        </div>
        <div class="btns">
            <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
        <div class="col-6 offset-3 mt-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mt-3 mb-3 ">
                    <label for="rating">Rating</label>
                    <input type="range" name="review[rating]" id="rating" min="1" max="5" step="1" class="form-range">
                </div>
                <div class="mt-3 mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="30"
                        required></textarea>
                    <div class="invalid-feedback">
                        leave a review !
                    </div>
                </div>
                <button class="btn btn-outline-dark mb-3">submit</button>
            </form>
            <hr>
            <p><b>All reviews</b></p>
           <div class="row">
             <% for(review of listing.reviews) { %>
                <div class="card ms-3 mb-3 col-5">
                    <div class="card-body">
                    <h5 class="card-title">Jane Doe</h5>
                    <P class="card-text"><%=review.comment %></p>
                    <p class="card-text"><%=review.rating%> stars</P>
            <form method="POST" action="/listings/<%=listing._id %>/reviews/<%=review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark mb-3" type="submit">Delete</button>
           </form>
                </div>
                </div>
                <% } %>
           </div>
        </div>
    </div>
